{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "ES2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"declaration": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["*.ts", "lib/**/*.ts", "test/**/*.ts", "types/**/*.ts", "bundler/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}